<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Spellbook Dashboard</title>
</head>
<body>
    <header>
        <nav>
            <div><h1>MySpellbook</h1></div>
            <div><a href="/spells/new">Add Spell</a></div>
            <div>
                <form action="/sessions?_method=DELETE" method="post">
                <input type="submit" value="Log Out" />
            </form>
            </div>
        </nav>
    </header>
<main>
    <ul>
        <% spells.forEach(spell => { %>
            <% switch (spell.level) {
                case 0: %>
                <h2>Cantrips</h2>
                <li>
                    <a href="/spells/<%= spell._id %>">
                        <%= spell.name %>
                    </a>
                </li>
                    <% break;
                case 1: %>
                <h2>Level 1 spells</h2>
                <li>
                    <a href="/spells/<%= spell._id %>">
                        <%= spell.name %>
                    </a>
                </li>
                <% break;
                case 2: %>
                <h2>Level 2 spells</h2>
                <li>
                    <a href="/spells/<%= spell._id %>">
                        <%= spell.name %>
                    </a>
                </li>
                   <% break;
                   case 3: %>
                <h2>Level 3 spells</h2>
                <li>
                    <a href="/spells/<%= spell._id %>">
                        <%= spell.name %>
                    </a>
                </li>
                   <% break;
                   case 4: %>
                <h2>Level 4 spells</h2>
                <li>
                    <a href="/spells/<%= spell._id %>">
                        <%= spell.name %>
                    </a>
                </li>
                   <% break;
                   case 5: %>
                Level 5 spells
                <li>
                    <a href="/spells/<%= spell._id %>">
                        <%= spell.name %>
                    </a>
                </li>
                   <% break;
                   case 6: %>
                Level 6 spells
                <li>
                    <a href="/spells/<%= spell._id %>">
                        <%= spell.name %>
                    </a>
                </li>
                   <% break;
                   case 7: %>
                Level 7 spells
                <li>
                    <a href="/spells/<%= spell._id %>">
                        <%= spell.name %>
                    </a>
                </li>
                   <% break;
                   case 8: %>
                Level 8 spells
                <li>
                    <a href="/spells/<%= spell._id %>">
                        <%= spell.name %>
                    </a>
                </li>
                   <% break;
                   case 9: %>
                Level 9 spells
                <li>
                    <a href="/spells/<%= spell._id %>">
                        <%= spell.name %>
                    </a>
                </li>
                   <% break;
            } %>
        <% }) %>
    </ul>
</main>
</body>
</html>